<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('CDN/bootstrap.ejs') %>

</head>
<body>
  <%- include ('Header/Home_Header') %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-sm-4 offset-sm-1"> 
      <img src="../public/image/girl_newuser.jpg" class="img-fluid mx-auto d-block" alt="logo" style="width:180px; height:100%">
      </div>
      <div class="col-sm-4">
       <div class="card">
          <div class="card-header text-center">
               <h3 class="text-center">Create Your Account</h3>
          </div>
          <div class="card-body">
              <form action="/paccount" method="POST">
          <div class="form-group">
            <label for="username" class="text-danger mt-3" >Name</label>
            <input type="text" class="form-control" id="username" name="username" required>
            <label for="email" class="text-danger mt-3" >Email</label>
            <input type="text" class="form-control" id="email" name="email" required>
            <label for="password" class="text-danger mt-3" >Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <label for="cpassword" class="text-danger mt-3" >Confirm Password</label>
            <input type="cpassword" class="form-control" id="cpassword" name="cpassword" required>
            <div class="mt-3">
            <label for="gender" class="text-danger mt-2">Gender</label> <br>
            <input type="radio" id="male" name="gender" value="male" class="text-danger mx-2" required>Male
            <input type="radio" id="female" name="gender" value="female" class="text-danger mx-2" required>female
            </div>
            <label for="address" class="text-danger mt-3" >Address</label>
            <textarea class="form-control" id="address" name="address" required></textarea>
            </div>
            <button type="submit" class="btn btn-danger mt-4 w-100">Submit</button>
        </form>
          </div>
       </div> 
      </div>
    </div>
  </div>


    <%- include ('Footer/Dashboard_footer') %>
    <%- include ('Chat/chat.ejs') %> 
    <%- include ('CDN/javascript.ejs') %>
</body>
</html>