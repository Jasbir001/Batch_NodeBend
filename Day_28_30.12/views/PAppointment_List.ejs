<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('CDN/bootstrap.ejs') %>
</head>
<body>
<%- include('PDashboard_bar/pbar') %>

 <div style="position: absolute; top:36%;left:-8%; width:100%;">
          <h3 class="text-center text-danger">My Appointments</h3>
             <div class="container mt-3">
               <div class="row mt-2">
                   <div class="col-sm-10 offset-sm-1 mt-3">
                  <% if(locals.datas) 
                  {%>
                     <table class="table table-primary table-striped-columns" id="palist">
                       <thead>
                             <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email_Id</th>
                                <th>Phone</th>
                                <th>PDate</th>
                                <th>PTime</th>
                                <th>Address</th>
                             </tr>
                       </thead>
                       <tbody>
                          <% for(var i=0;i<datas.length; i++)
                          {%>
                              <tr>
                                    <td><%=datas[i].id%></td>
                                    <td><%=datas[i].name%></td>
                                    <td><%=datas[i].email%></td>
                                    <td><%=datas[i].phone%></td>
                                    <td><%=datas[i].presefered_date%></td>
                                    <td><%=datas[i].preffer_time%></td>
                                    <td><%=datas[i].address%></td>
                              </tr>
                          <%}%>
                        </tbody>
                     </table>
                     <%}%>
                
                    <% if(locals.mesg)
                    {%>  
                        <h6 align="center"><%=mesg%></h6>
                    <%}%>
           
        </div>
               </div>
             </div>
        </div>


<%- include('CDN/javascript.ejs') %>
<%- include('CDN/datatablejs.ejs') %>
<%- include('chat/chat.ejs') %>
<script>
  $('#palist').DataTable();
</script>
</body>
</html>

