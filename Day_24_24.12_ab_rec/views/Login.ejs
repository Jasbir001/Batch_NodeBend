<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<%- include('CDN/bootstrap.ejs') %>

</head>
<body>
 <%- include('Header/Home_Header.ejs') %>   

 <div class="container mt-2 login_div_margin_bottom">
    <div class="row mt-3">
        <div class="col-sm-4 offset-sm-4 mt-3">
            <img src="../public/images/login.png"class="img-fluid mx-auto d-block" alt="Logo" style="width:180px;height:180px;">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form action="/plogin" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>  
                            <label for="password" class="mt-3">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Login</button>
                    </form>
                    <a href="/forgot_password" class="d-block mt-3 text-center text-danger">Forgot Password?</a>
                    <a href="/paccount" class="d-block mt-2 text-center text-danger">Not Have an Account?</a>
                </div>
                    <% if(locals.mesg)
                    {%>  
                        <h6 align="center"><%=mesg%></h6>
                    <%}%>
           </div>
        </div>
    </div>
</div>

         <% if(locals.useremail)
         {%>
            
            <script>
                document.getElementById("email").value='<%=useremail%>';
            </script>
         <%}%>

<%- include('CDN/javascript.ejs') %>
<%- include('chat/chat.ejs') %>
   <%- include('Footer/Dashboard_Footer.ejs') %>
</body>
</html>