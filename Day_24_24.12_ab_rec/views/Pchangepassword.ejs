<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <%- include('CDN/bootstrap.ejs') %>
</head>
<body>
<div class="d-flex">
<%- include('Header/Patient_Header.ejs') %> 
<!-- Right Side------ -->

  <div class="flex-grow-1 bg-light p-2">

      <div class="container-fluid">
        <h2 class="text-center text-danger mt-4 mb-5">Dashboard</h2>
        <div class="row">
                 
                <div class="col-sm-2 bg-warning text-white hg d-flex justify-content-center">
                  <div class="graph">
                     <div class="count">7</div>
                     <div class="label">Total Enquiry</div>
                  </div>
                </div>

                 <div class="col-sm-2 bg-success text-white hg d-flex justify-content-center">
                    <div class="graph">
                      <div class="count">24</div>
                      <div class="label">Total Appointment</div>
                  </div>
                </div>
                <div class="col-sm-2 bg-primary text-white hg d-flex justify-content-center">
                    <div class="graph">
                      <div class="count">2</div>
                      <div class="label">Medical History</div>
                    </div>
                </div>
                <div class="col-sm-2 bg-info text-white hg d-flex justify-content-center">
                   <div class="graph">
                      <div class="count">24-12-2025</div>
                      <div class="label">Current Date</div>
                  </div>
                </div>
                <div class="col-sm-4">
                    <img src="../public/images/Pdashwomen.png"style="height:60%;" >
                </div>
       </div>
      </div>      
 
</div>
 
        
        <div style="position: absolute; top:36%;left:-8%; width:100%;">
          <h3 class="text-center text-danger">Manage Accounts</h3>
             <div class="container mt-5">
               <div class="row mt-4">
                   <div class="col-sm-4 offset-sm-4 mt-3">
                <div class="card">
                <div class="card-header text-center">
                    <h3>Change Password</h3>
                </div>
                <div class="card-body">
                    <form action="/Patient_settings" method="post">
                        <div class="form-group mb-3">
                            <label for="old">Old Password</label>
                            <input type="password" class="form-control" id="old" name="oldpassword" required>  
                            <label for="newpassword" class="mt-3">New Password</label>
                            <input type="password" class="form-control" id="newpassword" name="newpassword" required>
                            <label for="confpassword" class="mt-3">Confirm Password</label>
                            <input type="password" class="form-control" id="confpassword" name="confpassword" required>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Submit</button>
                    </form>
                </div>
                    <% if(locals.mesg)
                    {%>  
                        <h6 align="center"><%=mesg%></h6>
                    <%}%>
           </div>
        </div>
               </div>
             </div>
        </div>

<!-- Right Side End -->

<%- include('CDN/javascript.ejs') %>
<%- include('chat/chat.ejs') %>
</body>
</html>